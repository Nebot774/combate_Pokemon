<?xml version="1.0" encoding="utf-8"?>
<!-- layout_ingreso_datos.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/redToolbar"
        android:elevation="4dp">

        <!-- LinearLayout Principal para la Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Espacio para empujar todo a la derecha -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- LinearLayout para la primera imagen -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/pokemonLogo"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/logopokemon" />
            </LinearLayout>

            <!-- LinearLayout para la segunda imagen -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/bolaPokemon"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/bolapokemon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Datos de Pokémon 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Pokémon 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Nombre de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon1Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre" />

            <!-- HP de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon1HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HP"
                android:inputType="number" />

            <!-- Ataque de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon1Ataque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ataque"
                android:inputType="number" />

            <!-- Defensa de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon1Defensa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Defensa"
                android:inputType="number" />

            <!-- Ataque Especial de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon1AtaqueEspecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ataque Especial"
                android:inputType="number" />

            <!-- Defensa Especial de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon1DefensaEspecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Defensa Especial"
                android:inputType="number" />

            <!-- Datos de Pokémon 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Pokémon 2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Nombre de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon2Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre" />

            <!-- HP de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon2HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HP"
                android:inputType="number" />

            <!-- Ataque de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon2Ataque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ataque"
                android:inputType="number" />

            <!-- Defensa de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon2Defensa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Defensa"
                android:inputType="number" />

            <!-- Ataque Especial de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon2AtaqueEspecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ataque Especial"
                android:inputType="number" />

            <!-- Defensa Especial de Pokémon 1 -->
            <EditText
                android:id="@+id/pokemon2DefensaEspecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Defensa Especial"
                android:inputType="number" />


            <!-- Botón para iniciar combate -->
            <Button
                android:id="@+id/btnStartCombat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Iniciar Combate" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>